<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.test.myweather.activity.WeatherInfoActivity">

    <RelativeLayout
        android:id="@+id/weatherInfo_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/switch_city_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="切换城市"/>

        <TextView
            android:id="@+id/title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_centerInParent="true"
            tools:text="abc"/>

        <Button
            android:id="@+id/refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:text="更新天气"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/weatherInfo_body_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/publish_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:textSize="38sp"
            tools:text="abc"/>

        <TextView
            android:id="@+id/current_data_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="abc"
            android:textSize="48sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"/>

        <TextView
            android:id="@+id/weather_des_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="bbb"
            android:layout_centerInParent="true"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/temp_show_textView"
            android:layout_marginTop="350dp"
            android:layout_centerHorizontal="true"
            android:textSize="48sp"
            tools:text="aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--<TextView-->
            android:id="@+id/low_temp_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:textSize="38sp"
            android:layout_marginLeft="100dp"
            tools:text="bbb"
            />

        <!--<TextView-->
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true"
            android:textSize="38sp"
            />

        <!--<TextView-->
            android:id="@+id/high_temp_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ccc"
            android:layout_marginTop="300dp"
            android:textSize="38sp"
            android:layout_marginLeft="220dp"
            />
    </RelativeLayout>

</LinearLayout>
